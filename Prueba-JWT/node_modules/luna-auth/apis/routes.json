{
  "routes": [
    {
      "method": "POST",
      "path": "/auth/login",
      "handler": "authentication.login"
    },
    {
      "method": "POST",
      "path": "/register-admin",
      "handler": "authentication.registerAdmin"
    },
    {
      "method": "GET",
      "path": "/registration-info",
      "handler": "authentication.registrationInfo"
    },
    {
      "method": "POST",
      "path": "/register",
      "handler": "authentication.register"
    },
    {
      "method": "POST",
      "path": "/users",
      "handler": "user.create",
      "config": {
        "policy": ["auth::isAuthenticatedAdmin"]
      }
    },
    {
      "method": "DELETE",
      "path": "/auth/:id",
      "handler": "user.delete"
    }
  ]
}
